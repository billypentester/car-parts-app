<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document </title>
<script>
    function pass()
    {
        var val = document.getElementById("get").innerHTML;
        document.getElementById("val").value = val;
        console.log(document.getElementById("val").value);
        alert(document.getElementById("val").value)
    }
</script>
</head>
<body class="bg-gray-100 h-screen">

    <div class="bg-gray-900">
         <a href="/"><h1 class="py-4 px-8 text-white font-semibold text-3xl inline-block">Car spare parts</h1></a>
         <a href="/admin"><h1 class="rounded-md bg-red-500 py-2 px-4 text-white inline-block">Admin Panel</h1></a>
    </div>

        <h1 class="hidden" id="get">{{val}}</h1>

        <h1 class="text-center p-4 text-2xl font-semibold text-gray-900 my-3">Available car parts</h1>

        <div class="m-10">
            
            {{#each part}}
            <div class="rounded-md m-3 w-1/3 border border-gray-400 inline-block">
                <img class="rounded-bt-md rounded-l-md w-2/5 inline-block" src="{{pic}}" />
                <div class="inline-block m-4 text-center">
                    <h1 class="text-3xl text-center font-semibold" >{{name}}</h1>
                    <span class="block">Price : ${{price}}/-</span>
                    <form action="/final" onsubmit="pass()">
                        {{!-- <input type="hidden" id="val" name="id"> --}}
                        <input type="hidden" name="part" value="{{name}}">
                        <input class="inline-block my-3 text-center bg-red-500 text-white p-3 rounded-md cursor-pointer" type="submit" value="checkout" />
                    </form>
                </div>
            </div>
            {{/each}}
        </div>
  
</body>
</html>